<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sangwoo.simplecommunity">
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name="com.sangwoo.simplecommunity.Activity.PrivacyActivity"></activity>
        <activity android:name="com.sangwoo.simplecommunity.Activity.RefreshActivity" />
        <activity android:name="com.sangwoo.simplecommunity.Activity.BoardActivity" />
        <activity android:name="com.sangwoo.simplecommunity.Activity.WriteActivity" />
        <activity android:name="com.sangwoo.simplecommunity.Activity.RegisterActivity" />
        <activity android:name="com.sangwoo.simplecommunity.ShootingGame.BackScrollActivity" />
        <activity android:name="com.sangwoo.simplecommunity.Activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sangwoo.simplecommunity.MainActivity" />
    </application>

</manifest>